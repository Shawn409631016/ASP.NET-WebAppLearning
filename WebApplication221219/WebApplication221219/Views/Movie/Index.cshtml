@model IEnumerable<Movie2>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td><a asp-action="Edit" asp-controller="Movie" asp-route-Id="@item.Id">Edit</a></td>
        </tr>
    }
</table>